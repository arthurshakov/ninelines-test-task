		section.home__section#experience(
			data-scroll
			data-scroll-id="experience"
			data-scroll-offset="50%"
		)
			article.home__text
				h2
					| Опыт работы

				each job in data.jobs
					+job(job)

			.dude#the-floating-dude(data-scroll)
				.dude__container(
					data-scroll-target="#the-floating-dude"
					data-scroll-sticky
					data-scroll
				)
					+lazyPicture({
						src: `${baseDir}images/png/floating-dude.png`,
						alt: 'Чувак, витающий в воздухе.',
					}, [
						{
							srcset: `${baseDir}images/png/floating-dude.png 1x, ${baseDir}images/png/floating-dude@2x.png 2x`,
						}
					]).home__picture

			.home__aside.home__education
				h2
					| Образование

				.home__courses
					each course in data.courses
						+course(course)

