main.home
	.container
		img.home__logo#about-me(
			srcset=`${baseDir}images/png/logo.png 1x, ${baseDir}images/png/logo@2x.png 2x`
			src= `${baseDir}images/png/logo.png`
			alt= "Логотип"
			data-scroll
			data-scroll-id="about-me"
			data-scroll-offset="50%"
		)

		section.home__section(data-scroll)
			article.home__text
				h1
					| #{data.about.name},
					<br>
					| #{data.about.position}
				p.home__about
					| !{data.about.text}
			.home__aside
				.home__contacts
					a(href="mailto:arthurshakov@gmail.com")
						| arthurshakov@gmail.com
				.home__contacts
					a(href="tel:+79267022937")
						| +7 (926) 702-29-37
				.home__contacts
					| г. Чегем
				.home__contacts
					.home__social-icon(data-social="fb")
						+svg("icon-fb")
					.home__social-icon(data-social="vk")
						+svg("icon-vk")
					.home__social-icon(data-social="tw")
						+svg("icon-tg")
